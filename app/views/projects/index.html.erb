<script>
  $.vegas('slideshow', {
    delay:5000,
    backgrounds:[
      { src:'http://s25.postimg.org/vg1qmfub3/Img01.png', fade:1000 },
      { src:'http://s25.postimg.org/oup0moegf/DSCN2301.jpg', fade:1000 },
      { src:'http://s25.postimg.org/vzsf6aptb/IMG_0644.jpg', fade:1000 },
      { src:'http://s25.postimg.org/3qqqw39kf/IMG_1051a.png', fade:1000 }
    ]
  });

  function hideDiv(divId) {$("#"+divId).hide();}
  function showDiv(divId) {$("#"+divId).show();}

  $(document).ready(function () {
    $("div").scroll(function () {
      var $this = $(this);
      var height = this.scrollHeight - $this.height(); // Get the height of the div
      var scroll = $this.scrollTop(); // Get the vertical scroll position

      var isScrolledToEnd = (scroll >= height);

      if (isScrolledToEnd) {
        hideDiv('down_arrow');
      }
    });
  });
</script>

