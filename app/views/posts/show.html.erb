<style>
  #blog_post_icons li {display: inline;}
</style>

<% if user_signed_in? %>
<%= link_to "Delete", post_path(@post), method: :delete, "data-confirm"=>"Are you sure?" %>
<% end %>


<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default" style="margin-top:20px;">
    <div class="panel-body">
      <h1><%= @post.title %></h1>
      <small><%= @post.created_at %></small>
      <p><%= @post.body.html_safe %></p>
    </div>
    <ul id="blog_post_icons">
      <li><a href="http://epperson.me"><%= image_tag('homeicon_blue_32.png') %></a></li>
      <li><a href="http://epperson.me/posts"><%= image_tag('blogger.png') %></a></li>
      <li><a href="http://www.linkedin.com/pub/eric-epperson/2a/973/364/">
        <%= image_tag('linkedin_color.png') %></a></li>
      <li><a href="https://github.com/EricDavidEpperson">
        <%= image_tag('github_alt_color.png') %></a></li>
    </ul>
  </div>
</div>
